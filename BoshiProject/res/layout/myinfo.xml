<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	android:id="@+id/whole"
	android:orientation="vertical"
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/titletop"
        android:gravity="center"
        android:orientation="horizontal" >

       <include layout="@layout/topbanner" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	android:id="@+id/middle"
	android:orientation="vertical"
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:background="@drawable/middlebg"
    >
 <TextView android:id="@+id/myinfotitle" 
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:text="@string/myinfotitleText" 
     android:gravity="center">
         </TextView>
         <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
             android:orientation="vertical"
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:id="@+id/messagePart" >
             
           <TextView android:id="@+id/oneNote" 
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:gravity="center"/>
         </LinearLayout>
         </LinearLayout>
     <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:orientation="vertical" >

        <include layout="@layout/foot" />
    </LinearLayout>
</LinearLayout>