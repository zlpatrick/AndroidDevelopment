        <activity
            android:name="com.boshi.android.activity.MonthViewActivity"
            android:label="@string/app_name"
           >
            
        </activity>
        <activity
            android:name="com.boshi.android.activity.AddScheduleActivity"
            android:label="@string/app_name"
